<?xml version="1.0"?>
<robot name="arm_robot">

  <!-- Dummy links (required even if you don't visualize) -->
  <link name="base_link"/>
  <link name="link_0"/>
  <link name="link_1"/>

  <!-- Joints -->
  <joint name="joint_0" type="revolute">
    <parent link="base_link"/>
    <child link="link_0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="1.57" effort="1" velocity="1"/>
  </joint>

  <joint name="joint_1" type="revolute">
    <parent link="link_0"/>
    <child link="link_1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="1.57" effort="1" velocity="1"/>
  </joint>

  <!-- ROS2 CONTROL (THIS WAS MISSING ROOT) -->
  <ros2_control name="ArmSystem" type="system">
    <hardware>
      <plugin>arm_servo_controller/ArmServoHardware</plugin>
      <param name="port">/dev/arm_servo</param>
      <param name="gripper_id">9</param>
    </hardware>

    <joint name="joint_0">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <param name="id">5</param>
    </joint>

    <joint name="joint_1">
      <command_interface name="position"/>
      <state_interface name="position"/>
      <param name="id">9</param>
    </joint>
  </ros2_control>

</robot>
